---
import FeatureCard from './cards/FeatureCard.astro';

const features = [
    {
        icon: 'fas fa-graduation-cap',
        title: 'Engineering Education MR',
        description: 'Interactive modules for Aerospace and Electrical & Electronic Engineering with hands-on simulations that bring complex concepts to life in 3D space.'
    },
    {
        icon: 'fas fa-industry',
        title: 'Industrial Training Solutions',
        description: 'Corporate training programs for companies like ST Engineering and SP Group, featuring real-world scenario simulations and safety protocols.'
    },
    {
        icon: 'fas fa-drafting-compass',
        title: 'Design Collaboration Tools',
        description: 'Real-time collaborative design environments for engineering teams to visualize, iterate, and refine projects before physical implementation.'
    },
    {
        icon: 'fas fa-plane',
        title: 'Aerospace Simulations',
        description: 'Specialized modules for aerospace engineering education, including aircraft systems, flight dynamics, and maintenance procedures in mixed reality.'
    },
    {
        icon: 'fas fa-microchip',
        title: 'Electronics & Circuits',
        description: 'Interactive circuit design and troubleshooting experiences for electrical engineering students with virtual oscilloscopes and component testing.'
    },
    {
        icon: 'fas fa-users',
        title: 'Multiplayer Learning',
        description: 'Collaborative learning spaces where students and instructors can interact simultaneously, enabling group projects and peer-to-peer learning.'
    }
];
---

<section class="section features-section" id="features">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Custom MR Solutions</h2>
            <p class="section-subtitle">
                Our proprietary mixed reality engine delivers specialized educational and training experiences 
                tailored for Singapore's engineering education sector and industrial training needs.
            </p>
        </div>
        <div class="features-grid grid grid-auto-fit">
            {features.map(feature => (
                <FeatureCard 
                    icon={feature.icon}
                    title={feature.title}
                    description={feature.description}
                />
            ))}
        </div>
    </div>
</section>

<style>
.features-section {
    background-color: var(--color-charcoal);
}

.features-grid {
    gap: 30px;
}
</style>