---
import FeatureCard from './cards/FeatureCard.astro';

const features = [
    {
        icon: 'fas fa-gamepad',
        title: 'Real-World Gaming',
        description: 'Transform ordinary spaces into epic gaming arenas. Battle bosses in your local park, hunt for digital treasures, and participate in live community events.'
    },
    {
        icon: 'fas fa-graduation-cap',
        title: 'Educational MR Modules',
        description: 'Bring learning to life with interactive modules covering wildlife, physics, history, and more, all overlaid onto your physical environment.'
    },
    {
        icon: 'fas fa-drafting-compass',
        title: 'Industrial Design Visualization',
        description: 'Visualize architectural plans, engineering prototypes, and product designs in real space before they\'re built, saving time and resources.'
    },
    {
        icon: 'fas fa-heartbeat',
        title: 'Medical Training Simulations',
        description: 'Practice medical procedures with AR overlays that guide healthcare professionals through complex techniques safely and effectively.'
    },
    {
        icon: 'fas fa-store',
        title: 'Brand Collaborations',
        description: 'Partner with top brands to host in-world activities, offer branded digital cosmetics, and create immersive shopping experiences.'
    },
    {
        icon: 'fas fa-users',
        title: 'Multiplayer Experiences',
        description: 'Connect with friends and colleagues in shared mixed reality spaces, regardless of physical location, for collaboration or entertainment.'
    }
];
---

<section class="section features-section" id="features">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Revolutionary Features</h2>
            <p class="section-subtitle">
                Terralink combines cutting-edge AR/VR technology with real-world environments 
                to create immersive mixed reality experiences like never before.
            </p>
        </div>
        <div class="features-grid grid grid-auto-fit">
            {features.map(feature => (
                <FeatureCard 
                    icon={feature.icon}
                    title={feature.title}
                    description={feature.description}
                />
            ))}
        </div>
    </div>
</section>

<style>
.features-section {
    background-color: var(--color-charcoal);
}

.features-grid {
    gap: 30px;
}
</style>